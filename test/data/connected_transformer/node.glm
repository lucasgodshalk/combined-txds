// An infinite source, a transformer, and a PQ load

/////////////////////////////////////////////
// BEGIN
/////////////////////////////////////////////

module tape;

clock {
    timestamp '2000-01-01 0:00:00';
    timezone EST+5EDT;
}

module powerflow {
    solver_method NR;
    // NR_matrix_file "y_matrix_printout.txt";
    // NR_matrix_output_interval ONCE;
    // NR_matrix_output_references true;
};

// object voltdump {
//     filename connected_transformer_voltage.csv;
// 	mode RECT;
// }

object transformer_configuration:400 {
    connect_type 1;
    power_rating 6000;
    powerA_rating 2000;
    powerB_rating 2000;
    powerC_rating 2000;
    primary_voltage 12470;
    secondary_voltage 4160;
    resistance 0.01;
    reactance 0.06;
}

object node {
    name node1;
    phases "ABCN";
    nominal_voltage 7200;
    bustype SWING;
    // object recorder {
    //     file node1_voltages.csv;
    //     interval 60;
    //     property voltage_A, voltage_B, voltage_C;
    // };
}

object transformer:23 {
    phases "ABCN";
    from node1;
    to load1;
    configuration transformer_configuration:400;
}

object load {
    name load1;
    phases "ABCN";
    constant_power_A +1800000.000+871779.789j;
    constant_power_B +1800000.000+871779.789j;
    constant_power_C +1800000.000+871779.789j;
    nominal_voltage 2400;
    bustype PQ;
    // object recorder {
    //     file load1_voltages.csv;
    //     interval 10000;
    //     property measured_voltage_A, measured_voltage_B, measured_voltage_C;
    // };
}